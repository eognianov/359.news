@page
@using NewsSystem.Common
@model LoginModel

@{
    this.Layout = "_CleanLayout";
    ViewData["Title"] = UIConstants.LOG_IN;
}
    <div class="splash-container" style="font-family: Montserrat; font-size: 14px; font-weight: 900; margin: auto ;">
        <div class="card ">
            <div class="card-header text-center"><a asp-route="~/"><img class="logo-img" src="~/img/0722logo.png" alt="logo" style="width: 100%"></a></div>
            <div class="card-body">
                <form id="account" method="post">
                    <div class="form-group">
                        <input class="form-control form-control-lg" asp-for="Input.Username" placeholder="Username" autocomplete="off">
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" asp-for="Input.Password" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="custom-control custom-checkbox" asp-for="Input.RememberMe">
                            <input class="custom-control-input" asp-for="Input.RememberMe"><span class="custom-control-label"> @UIConstants.REMEMBER_ME</span>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">@UIConstants.SIGN_IN</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a asp-page="./ForgotPassword" class="footer-link">@UIConstants.FORGOT_PASSWORD</a>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
