@using NewsSystem.Common

<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/dashboard/img/avatars/iconfinder_User_Cyber_Spy_1218719.png" class="img-circle" />
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- search form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">HEADER</li>
            <!-- Optionally, you can add icons to the links -->
            <li class="active"><a href="/office"><i class="fa fa-area-chart"></i> <span>@UIConstants.HOME</span></a></li>
            <li class=""><a asp-area="Administration" asp-controller="News" asp-action="Create"><i class="fa fa-file"></i> <span>@UIConstants.CREATE</span></a></li>
            <!--PUBLISHED SIDE MENU-->
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-eye"></i> <span>@UIConstants.PUBLISHED</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a asp-controller="Office" asp-action="Published">@UIConstants.TODAY</a></li>
                    <li><a asp-controller="Office" asp-action="Published" asp-route-period="yestarday">@UIConstants.YESTARDAY</a></li>
                    <li><a asp-controller="Office" asp-action="Published" asp-route-period="week">@UIConstants.SEVEN_DAYS</a></li>
                </ul>
            </li>

            <!--NOT PUBLISHED SIDE MENU-->
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-eye-slash"></i> <span>@UIConstants.NOT_PUBLISHED</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a asp-controller="Office" asp-action="NotPublished">@UIConstants.TODAY</a></li>
                    <li><a asp-controller="Office" asp-action="NotPublished" asp-route-period="yestarday">@UIConstants.YESTARDAY</a></li>
                    <li><a asp-controller="Office" asp-action="NotPublished" asp-route-period="week">@UIConstants.SEVEN_DAYS</a></li>
                </ul>
            </li>

            <!--DELETED SIDE MENU-->
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-trash"></i> <span>@UIConstants.DELETED</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a asp-controller="Office" asp-action="Deleted">@UIConstants.TODAY</a></li>
                    <li><a asp-controller="Office" asp-action="Deleted" asp-route-period="yestarday">@UIConstants.YESTARDAY</a></li>
                    <li><a asp-controller="Office" asp-action="Deleted" asp-route-period="week">@UIConstants.SEVEN_DAYS</a></li>
                </ul>
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>